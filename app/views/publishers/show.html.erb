<% breadcrumbs_for @publisher_decorator %>

<div class="media-object">
  <div class="media-object-section">
    <%= button_group(
      @publisher_decorator.edit_button,
      @publisher_decorator.cancel_button
    ) %>
  </div>
  <div class="media-object-section">
    <h4> <%= @publisher_decorator.name %></h4>
    <p> <%= @publisher_decorator.email %></p>
    <p> <%= @publisher_decorator.phone %></p>
  </div>
</div>

<h2>Designações atuais</h2>

<% @publisher_decorator.active_assignments.each do |assignment| %>
  <%= render partial: 'territories/assignment_item', locals: { assignment: assignment, display: :territory_name } %>
<% end %>

<h2>Histórico de Designações</h2>

<% @publisher_decorator.assignments.each do |assignment| %>
  <%= render partial: 'territories/assignment_item', locals: { assignment: assignment, display: :territory_name } %>
<% end %>
