<% page_title t('titles.publishers') %>
<% breadcrumbs_for @publishers_decorator %>

<table>
  <thead>
    <tr>
      <th><%= @publishers_decorator.title_for(:name) %></th>
      <th class="action" colspan="">
        <%= small_button_group(@publishers_decorator.new_button) %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @publishers_decorator.each do |publisher| %>
      <tr>
        <td><%= publisher.name %></td>
        <td class="action">
          <%= small_button_group(
              publisher.show_button,
              publisher.edit_button,
              publisher.destroy_button
            )
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
