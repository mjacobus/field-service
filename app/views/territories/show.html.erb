<% breadcrumbs_for @territory_decorator %>

<div class="media-object">
  <div class="media-object-section">
    <div class="thumbnail">
      <%= image_tag('territory2.png') %>
    </div>


  </div>
  <div class="media-object-section">
    <h4> <%= @territory_decorator.name %></h4>
    <p> <%= @territory_decorator.description %> </p>
    <p><%= @territory_decorator.title_for(:number_of_householders) %>: <%= @territory_decorator.number_of_householders %></p>
    <p><%= @territory_decorator.title_for(:current_assignee) %>: <%= @territory_decorator.current_assignee_name %></p>
    <p><%= @territory_decorator.title_for(:return_date) %>: <%= @territory_decorator.return_date %></p>
  </div>

  <div class="media-object-section"></div>
</div>

<hr />

<h2>Hist√≥rico</h2>

<% @territory_decorator.assignments.each do |assignment| %>
  <div class="row <% @territory_decorator.html_classes %>">
    <div class="small-12 large-3 columns"> <strong> <%= assignment.publisher.name %> </strong></div>
    <div class="small-4 columns">Data: <%= l assignment.assigned_at %></div>
    <div class="small-4 columns">Data retorno: <%= l assignment.return_date %></div>
    <div class="small-4 columns date">Retornado: <%= l(assignment.returned_at) if assignment.returned? %></div>
  </div>
<% end %>

<hr />

<div class="row">
  <a class="button warning large-4 medium-4 small-12 columns"
    href="<%= @territory_decorator.return_url %>"
    data-method="delete"
    data-confirm="<%= t('confirm_territory_return', territory: @territory_decorator.name) %>">
    <i class="fi-refresh"></i>
    <%= t('titles.return_territory') %>
  </a>

  <a class="button large-4 medium-4 small-12 columns" href="<%= @territory_decorator.assign_url %>">
    <i class="fi-arrow-up"></i>
    <%= t('titles.assign_territory') %>
  </a>

  <a class="button warning large-4 medium-4 small-12 columns" href="<%= @territory_decorator.householders_url %>">
    <i class="fi-torsos-all"></i>
    <%= t('titles.householders') %>
  </a>
</div>

<hr />

<div class="row <%= @territory_decorator.html_classes %>">
  <div class="large-4 medium-4 small-12 columns">&nbsp;</div>

  <a class="button success  large-4 medium-4 small-12 columns" href="<%= @territory_decorator.edit_url %>">
    <i class="fi-pencil"></i>
    <%= t('links.edit') %>
  </a>

  <a class="button alert  large-4 medium-4 small-12 columns"
    href="<%= @territory_decorator.url %>"
    data-method="delete"
    data-confirm="<%= t('confirm_territory_destroy', territory: @territory_decorator.name) %>">
    <i class="fi-x"></i>
    <%= t('links.destroy') %>
  </a>
</div>

<hr />

<div class="row">
  <div class="large-4 medium-4 small-12 columns">&nbsp;</div>
  <div class="large-4 medium-4 small-12 columns">&nbsp;</div>
  <a class="button alert hollow large-4 medium-4 small-12 columns" href="<%= @territory_decorator.index_url %>">
    <i class="fi-arrow-left"></i>
    <%= t('links.back') %>
  </a>
</div>

<%= render partial: 'map', locals: { addresses: @territory_decorator.names_and_addresses } %>
