<%= simple_form_for([:admin, user]) do |f| %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :admin %>

    <% if user.persisted? %>
      <%= f.input :password, placeholder: t('messages.change_users_password') %>
    <% end %>

    <%= UserDecorator.new(user).with_view_helpers(self).save_button %>
<% end %>

